<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4DEE9">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_add"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />
<RelativeLayout
    android:layout_width="300dp"
    android:layout_marginTop="36dp"
    android:layout_height="300dp"
    android:background="#98C3BC"
    android:id="@+id/relativeLayout"
    android:layout_below="@+id/textView5"
    android:layout_centerHorizontal="true">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="39dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="text"
        android:theme="@style/MyEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:id="@+id/editTextName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="100dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="text"
        android:theme="@style/MyEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:id="@+id/editTextAge" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:text="@string/textViewname" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:text="@string/textviewage" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="150dp"
        android:textSize="20sp"
        android:text="@string/typepill" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox1"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/editTextAge"
        android:layout_alignEnd="@+id/editTextAge"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />


    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox2"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox" />


    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox3"
        android:layout_below="@+id/checkBox2"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox" />

</RelativeLayout>


    <Button
        android:id="@+id/add_sen_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/buttons"
        android:textColor="#ffffff"
        android:text="@string/addsenbtn"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>